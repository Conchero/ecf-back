{% extends 'base.html.twig' %}

{% block title %}Louer une salle pour vos evenements{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div
  class="relative min-h-screen bg-cover bg-center"
  style="background-image: url('https://www.1001salles.com/images/provider/4697/1718274319_666ac90ff3845.webp');"
>
  <div class="absolute inset-0"></div>

  <div class="relative flex flex-col items-center justify-center min-h-screen px-6 text-center text-white">
    <h1 class="mb-5 text-5xl font-bold drop-shadow-lg">Hello there</h1>
    <p class="mb-5 max-w-md drop-shadow-md">
      Inscrivez vous pour acceder a la reservation d'une salle.
    </p>
    {# Si l'utilisateur n'est PAS connect√©, on affiche le bouton #}
{% if not app.user %}
    <a href="{{ path('app_signin') }}" class="btn btn-primary px-6 py-3 rounded bg-blue-600 hover:bg-blue-700 transition">
      S'inscrire
    </a>
    {% endif %}
  </div>
</div>

{% endblock %}
